<div id="header-animate" class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body">
      <!-- Card stats -->
      <div class="row">
        <div class="col-xl-3 col-lg-6">
          <div id="header-product-card" class="card  mb-4 mb-xl-0">
            <div id="header-product-card" class="card-body">
              <div class="row">

                <div class="col">

                  <h2 class="card-title text-uppercase text-white mb-3">Selected Product </h2>

                  <!-- Dropdown starts here -->
                  <div class="dropdown">
                    <button id="productDropdownButton" class="btn btn-secondary dropdown-toggle" type="button"
                      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Choose Product
                    </button>
                    <div class="dropdown-menu" aria-labelledby="productDropdown" id="productMenu">
                      <!-- Product list will be populated here -->
                    </div>
                  </div>

                </div>
                <div class="col-auto">

                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
                <span class="text-nowrap">Token Use</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-6">
          <div id="header-template-card" class="card card-stats mb-4 mb-xl-0">
            <div id="header-template-card" class="card-body">
              <div class="row">

                <div class="col">
                  <h2 class="card-title text-uppercase text-white mb-3">Selected Template </h2>

                  <div class="dropdown">
                    <button id="templateMenuButton" class="btn btn-secondary dropdown-toggle" type="button"
                      data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <span id="selected-template">Select Template</span>
                    </button>
                    <div id="templateMenu" class="dropdown-menu" aria-labelledby="templateMenuButton">
                      <!-- Template menu items will be added here -->
                    </div>
                  </div>

                </div>
                <div class="col-auto">

                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <span class="text-danger mr-2"><i class="fas fa-arrow-down"></i> 3.48%</span>
                <span class="text-nowrap">Token Use</span>
              </p>

            </div>

          </div>

        </div>


      </div>
    </div>
  </div>
</div>